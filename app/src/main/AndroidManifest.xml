<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jobcupid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.CandidateActivity"></activity>
        <activity android:name=".Activities.ChatActivity"></activity>
        <activity android:name=".Activities.MessageActivity"></activity>
        <activity android:name=".Activities.MainActivity" />
        <activity
            android:name=".Activities.OpeningScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.BaseMenuActivity" />

        <activity
            android:name=".Activities.LoginActivity"
            android:theme="@style/LoginTheme"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
            android:theme="@style/LoginTheme">
        </activity>

    </application>

</manifest>